{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <h1>Ticket</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Text_body</th>
                <td>{{ ticket.textBody }}</td>
            </tr>
            <tr>
                <th>Is_public</th>
                <td>{{ ticket.isPublic ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_open</th>
                <td>{{ ticket.isOpen ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_in_progress</th>
                <td>{{ ticket.isInProgress ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Customer_coment</th>
                <td>{{ ticket.customerComent }}</td>
            </tr>
            <tr>
                <th>Agent_coment</th>
                <td>{{ ticket.agentComent }}</td>
            </tr>
            <tr>
                <th>Is_waiting_for_feedback</th>
                <td>{{ ticket.isWaitingForFeedback ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_escalated</th>
                <td>{{ ticket.isEscalated ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ ticket.userId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ticket_index') }}">back to list</a>

    <a href="{{ path('ticket_edit', {'id': ticket.id}) }}">edit</a>

    {{ include('ticket/_delete_form.html.twig') }}
{% endblock %}
